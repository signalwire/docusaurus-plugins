{
  "name": "docusaurus-plugins-monorepo",
  "version": "1.0.0",
  "description": "A comprehensive collection of Docusaurus plugins",
  "private": true,
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:packages": "npm run build:llms-txt && echo 'âœ… All packages built successfully'",
    "build:llms-txt": "npm run build --workspace=packages/docusaurus-plugin-llms-txt",
    "build:website": "npm run build --workspace=website",
    "prebuild:website": "npm run build:packages",
    "dev": "npm run dev --workspaces --if-present",
    "dev:website": "npm run start --workspace=website",
    "start": "npm run start --workspace=website",
    "serve": "npm run serve --workspace=website",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:ci --workspaces --if-present",
    "lint": "eslint . && npm run lint --workspaces --if-present",
    "lint:fix": "eslint . --fix && npm run lint:fix --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "prepare": "husky install"
  },
  "keywords": [
    "docusaurus",
    "plugins",
    "documentation",
    "markdown",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/docusaurus-plugins.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/docusaurus-plugins/issues"
  },
  "homepage": "https://github.com/your-org/docusaurus-plugins#readme",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@docusaurus/utils": "^3.0.0",
    "@docusaurus/utils-validation": "^3.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "fs-extra": "^11.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
