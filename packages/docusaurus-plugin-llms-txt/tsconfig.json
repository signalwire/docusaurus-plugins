{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "./lib",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "jsx": "react-jsx",
    "noEmit": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["@docusaurus/module-type-aliases"]
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["lib", "node_modules", "**/*.test.ts", "**/*.test.tsx", "src/theme/", "**/__tests__/**"]
}