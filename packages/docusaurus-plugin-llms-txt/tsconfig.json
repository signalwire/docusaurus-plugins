// tsconfig.json  (plugin root)

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["lib", "node_modules", "**/*.test.ts", "**/*.test.tsx"]
}